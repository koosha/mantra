# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# CourtListener API (Optional - for higher rate limits)
COURTLISTENER_API_TOKEN=your-courtlistener-token-here

# Embedding Model Configuration
EMBEDDING_MODEL=text-embedding-3-small
# Options: text-embedding-3-small, text-embedding-3-large, text-embedding-ada-002

# LLM Configuration
LLM_MODEL=gpt-4
# Options: gpt-4, gpt-4-turbo, gpt-4o, gpt-4o-mini

# Vector Database Configuration (FAISS)
FAISS_INDEX_PATH=./faiss_index
METADATA_PATH=./faiss_index/metadata.pkl

# Data Configuration
DATA_DIR=./data/cases
MAX_CASES_TO_FETCH=None  # Set to a number to limit, or None for all
